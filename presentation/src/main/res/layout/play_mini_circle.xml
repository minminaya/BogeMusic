<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/mini_play"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1dp"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/icon_play_start" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/play_circle_progress"
        app:donut_finished_color="@color/red"
        app:donut_finished_stroke_width="5px"
        app:donut_progress="25"
        app:donut_text=""
        app:donut_unfinished_stroke_width="5px"
        android:layout_width="35dp"
        android:layout_height="35dp" />
</FrameLayout>