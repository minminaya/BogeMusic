<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.minminaya.bogemusic.finder.activity.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text="   敏敏啊呀" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text="简书" />
        <TextView
            android:layout_below="@+id/tv1"
            android:layout_toEndOf="@id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:autoLink="web"
            android:ellipsize="end"
            android:lines="2"
            android:text="http://www.jianshu.com/u/43a04ef9d4c6" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv3"
            android:layout_below="@+id/tv2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text=" GitHub" />
        <TextView
            android:layout_below="@+id/tv2"
            android:layout_toEndOf="@id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:autoLink="web"
            android:ellipsize="end"
            android:lines="2"
            android:text="https://github.com/minminaya" />

    </RelativeLayout>
    <View
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:text="    设计：      设计豆" />
            <TextView
                android:gravity="center"
                android:id="@+id/tv5"
                android:layout_below="@+id/tv4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:text="站酷" />
            <TextView
                android:layout_below="@+id/tv4"
                android:layout_toEndOf="@id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:autoLink="web"
                android:ellipsize="end"
                android:lines="2"
                android:text="http://www.zcool.com.cn/u/15006487" />



        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
